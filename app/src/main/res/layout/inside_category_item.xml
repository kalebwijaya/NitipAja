<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_inside_category_item"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_category_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/iv_inside_category_item"
            android:layout_toRightOf="@id/iv_inside_category_item"
            android:text="Item Name"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_category_item_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category_item_name"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/iv_inside_category_item"
            android:layout_toRightOf="@id/iv_inside_category_item"
            android:text="Item Location"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_category_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category_item_location"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/iv_inside_category_item"
            android:layout_toRightOf="@id/iv_inside_category_item"
            android:text="Item Price"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_category_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category_item_location"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/tv_category_item_price"
            android:layout_toRightOf="@id/iv_inside_category_item"
            android:textSize="16sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>